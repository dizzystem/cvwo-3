<%= form_for :task, url: tasks_path do |f| %><div class="form-group">

  <% if @task and @task.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <%= pluralize(@task.errors.count, "error") %> prohibited
      this task from being saved:
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :name, :class => "form-control", :placeholder => "The name of your task." %></div>
  </div>

  <div class="form-group">
    <%= f.label :text, :class => "col-sm-2" %>
    <div class="col-sm-10"><%= f.text_area :text, :class => "form-control", :placeholder => "A short description of your task." %></div>
  </div>

  <div class="form-group">
    <%= f.label :tags, :class => "col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :tags, :class => "form-control", :placeholder => "Separate tags with commas." %></div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, :class => "col-sm-2" %>
    <div class="col-sm-10"><%= f.text_field :due_date, :class => "form-control", :placeholder => "YYYY-MM-DD - Click for calendar menu.", :"data-provide" => "datepicker", :"data-date-format" => "yyyy-mm-dd", :"data-date-assume-nearby-year" => true, :"data-date-start-date" => "today", :"data-date-today-btn" => true, :"data-date-max-view-mode" => 2 %></div>
  </div>

  <div class="form-group">
    <%= f.submit 'Submit', :class => "btn btn-default col-sm-offset-2 col-sm-10" %>
  </div>
<% end %>