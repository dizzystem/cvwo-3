<h1><%= @task.name %></h1>
  <strong class="col-sm-2">Text:</strong>
  <div class="col-sm-10"><%= @task.text %></div>
</p>
 
<p>
  <strong class="col-sm-2">Tags:</strong>
  <div class="col-sm-10"><%= @task.tags %></div>
</p>
 
<p>
  <strong class="col-sm-2">Due date:</strong>
  <div class="col-sm-10"><%= @task.due_date %></div>
</p>
<p>
  <div class="col-sm-11 col-sm-offset-1">
  <%= link_to 'Back', tasks_path, :class => "btn btn-default" %>
  <%= link_to 'Edit', edit_task_path(@task), :class => "btn btn-default" %>
  <%= link_to 'Delete', task_path(@task),
                method: :delete,
                data: { confirm: 'Are you sure?' }, 
    :class => "btn btn-danger" %>
  </div>
</p>